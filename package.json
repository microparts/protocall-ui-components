{
  "name": "protocall-ui-components",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-bundle": "vue-cli-service build --target lib --name protocall-ui-components ./src/components/index.ts",
    "storybook:build": "vue-cli-service storybook:build",
    "storybook:serve": "vue-cli-service storybook:serve -p 6006",
    "test:unit": "vue-cli-service test:unit"
  },
  "main": "dist/protocall-ui-components.common.js",
  "dependencies": {
    "core-js": "^2.6.5",
    "popper.js": "^1.15.0",
    "svg-sprite-loader": "^4.1.3",
    "vue": "^2.6.9",
    "vue-class-component": "^7.0.1",
    "vue-directive-tooltip": "^1.6.2",
    "vue-property-decorator": "^8.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.1.5",
    "@storybook/addon-links": "^5.1.5",
    "@storybook/vue": "latest",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.3",
    "@types/storybook__vue": "^5.0.0",
    "@vue/cli-plugin-babel": "^3.5.1",
    "@vue/cli-plugin-typescript": "^3.5.1",
    "@vue/cli-plugin-unit-mocha": "^3.5.1",
    "@vue/cli-service": "^3.5.1",
    "@vue/test-utils": "^1.0.0-beta.29",
    "chai": "^4.2.0",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "typescript": "^3.3.3333",
    "vue-cli-plugin-storybook": "^0.6.1",
    "vue-template-compiler": "^2.6.9"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 11"
  ],
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
